<?xml version="1.0" encoding="UTF-8"?>
<DataSource
    ID="officeDS"
    clientOnly="true"
    dataURL="shared/data/officeData.xml"
    autoDeriveSchema="false">

  <fields>
    <!-- Primary key for each office -->
    <field name="officeCode"  type="integer" primaryKey="true" title="Office Code"/>

    <!-- Location and contact -->
    <field name="city"        type="text"    title="City"/>
    <field name="phone"       type="text"    title="Phone"/>

    <!-- Address lines -->
    <field name="addressLine1" type="text"   title="Address Line 1"/>
    <field name="addressLine2" type="text"   title="Address Line 2"/>

    <!-- Region info -->
    <field name="state"       type="text"    title="State/Province"/>
    <field name="country"     type="text"    title="Country"/>
    <field name="postalCode"  type="text"    title="Postal Code"/>
    <field name="territory"   type="text"    title="Territory"/>
  </fields>
</DataSource>
