<DataSource	ID="TextAreaItem" inheritsFrom="FormItem" Constructor="TextAreaItem" >
	<fields>
		<field name="wrap"		type="enum" title="Wrap Style">
			<valueMap OFF="off" SOFT="soft" HARD="hard"/>
		</field>
        <field name="showHintInField" type="boolean" basic="true"/>

        <field name="escapeHTML" type="boolean" basic="true"/>
        
        <!-- not implemented -->
   		<field name="length" type="positiveInteger" title="Length" visibility="internal" hidden="true"/>

        <field name="defaultValue" type="string"/>
	</fields>
    <methods>
        <method action="event" name="click" basic="true"/>
        <method action="event" name="changed" basic="true"/>
    </methods>

	<substituteClasses>BlurbItem, StaticTextItem, TextItem</substituteClasses>

</DataSource>
