<DataSource ID="TextItem" inheritsFrom="FormItem" Constructor="TextItem">
    <fields>
        <field name="length" type="positiveInteger" title="Length"/>
        <field name="showHintInField" type="boolean" basic="true"/>
        <field name="defaultValue" type="string"/>
        <field name="escapeHTML" type="boolean" basic="true"/>
    </fields>
	
    <substituteClasses>BlurbItem, StaticTextItem, TextAreaItem</substituteClasses>

    <methods>
        <method action="event" name="click" basic="true"/>
        <method action="event" name="changed" basic="true" whenRuleTip="true" />
    </methods>
</DataSource>
