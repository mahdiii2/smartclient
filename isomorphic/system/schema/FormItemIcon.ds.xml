<DataSource ID="FormItemIcon" inheritsFrom="Object"
            autoIdField="name">
	<fields>
        <field name="name"       xmlAttribute="true" type="fieldName" basic="true"/>

        <!-- ID auto-generated by VB -->
        <field name="autoName"   xmlAttribute="true" type="fieldName" hidden="true"/>

        <field name="src"        type="SCImgURL" editorType="ImageChooserItem" title="Image" basic="true" recreateOnChange="true"/>
        <field name="showOver"   type="boolean" />
        <field name="overSrc"    type="SCImgURL" editorType="ImageChooserItem" title="Over Image" recreateOnChange="true" />
        <field name="width"      type="number" basic="true" recreateOnChange="true"/>
        <field name="height"     type="number" basic="true" recreateOnChange="true"/>
        <field name="neverDisable" type="boolean" />
        <field name="showFocused" type="boolean" />
        <field name="inline" type="boolean" xmlAttribute="true" recreateOnChange="true"/>
        <field name="prompt"     type="string" />
        <field name="disabled"   type="boolean" recreateOnChange="true" />
        <field name="enableWhen"  type="AdvancedCriteria" isRuleCriteria="true" basic="true" />
        <field name="visibleWhen" type="AdvancedCriteria" isRuleCriteria="true" basic="true" />
    </fields>
    <methods>
        <method name="click" default="true" basic="true">
            <description>Fires when this icon is clicked</description>
            <params>
                <param name="form" type="DynamicForm"/>
                <param name="item" type="FormItem"/>
                <param name="icon" type="FormItemIcon"/>
            </params>
        </method>
    </methods>
</DataSource>
